class Solution {
public:
    int numberOfSubstrings(string s) {
        int n = s.size();
        int l = 0;
        int r = 0;
        unordered_map<char,int> mpp;
        int cnt = 0;
        
        for(int i = 0; i < n ;i++){
            mpp[s[i]]++;
            while(mpp['a'] > 0 && mpp['b'] > 0 && mpp['c'] > 0){
                cnt += (n - i);
                mpp[s[l]]--;
                l++;
            }
        }
        return cnt;
    }
};
